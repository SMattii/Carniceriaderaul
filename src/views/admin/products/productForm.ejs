<div class="row justify-content-center">
  <div class="
    form-group
    col-9">
    <label for="name">Name</label>
    <input
        name="name"
        type="text"
        class="form-control"
        id="name"
        value="<%=product?.name%>"
        required
    />
  </div>
  <div class="form-group col-3">
    <label for="stock">Stock</label>
    <input
        name="stock"
        type="number"
        step="0.01"
        class="form-control"
        id="stock"
        value="<%=product?.stock%>"
        required
    />
  </div>
</div>
<div class="form-group justify-content-center">
  <label for="image">Image</label>
  <input
      name="image"
      type="file"
      id="image"
      class="form-control"
      value="<%=product?.image%>"
  />
</div>
<div class="row justify-content-center">
  <div class="form-group col-md-5">
    <label for="price">Default Price</label>
    <div class="input-group">
      <input
          name="price"
          type="number"
          step="0.01"
          class="form-control"
          id="price"
          value="<%=product?.price%>"
          required
      />
      <div class="input-group-append">
        <select
            class="form-select"
            name="unit"
            id="unit"
            required
        >
          <%if(product?.unit === "€/unidad"){%>
          <option
              value="€/unidad"
              selected
          >
            <div class="bg-warning">€/unidad</div>
          </option>
          <option value="€/kg">
            €/unidad
          </option>
          <%} else {%>
          <option
              value="€/kg"
              sselect
          >
            <div class="bg-warning">€/kg</div>
          </option>
          <option value="€/unidad">
            €/unidad
          </option>
          <%}%>
       
    </select>
      </div>
    </div>
  </div>
  <div class="form-group col-md-5">
    <label for="salePrice">Sale Price</label>
    <input
        name="salePrice"
        type="number"
        step="0.01"
        class="form-control"
        id="salePrice"
        value="<%=product?.salePrice ?? ""%>"
          <%if(product?.sale){%>required<%} else{%>
          disabled
          <%}%> />
  </div>
  <div class="form- col-md-2">
    <label for="sale">Sale</label>
    <select
      class="form-select"
      name="sale"
      id="sale"
      onclick="setIsRequired(event)"
      required
    >
    <%if(product?.sale){%>
          <option
              value="1"
              selected
          >
            <div class="bg-warning">SI</div>
          </option>
          <option value="0">
            NO
          </option>
          <%} else {%>
          <option value="1">SI</option>
          <option
              value="0"
              selected
          >NO</option>
          <%}%>
       
    </select>
  </div>
</div>
<div class="form-group">
  <label for="category">Category</label>
  <select
      class="form-select col-md-1"
      name="category"
      id="category"
      onclick="setIsRequired(event)"
      required
  >
    <option value="Ternera" selected>Tenera</option>
    <option value="Pollo">Pollo</option>
    <option value="Cerdo">Cerdo</option>
    <option value="Elaborado">Elaborado</option>
  </select>
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea
      name="description"
      type="textarea"
      id="description"
      class="form-control textarea"
      value="<%=product?.description%>"
          ></textarea>
      </div>