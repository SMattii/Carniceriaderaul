<!DOCTYPE html>
<html>

<head>
  <!-- Title -->
  <title>Admin - Raul's butcher shop</title>
  <%- include('../../imports.ejs') %>

  <link
      rel="stylesheet"
      type="text/css"
      href="/css/admin.css"
  />
  <link
      rel="stylesheet"
      type="text/css"
      href="/css/layout/actionbar.css"
  />
  <link
      rel="stylesheet"
      type="text/css"
      href="/css/userForm.css"
  />
</head>

<body>
  <header><%- include('./layout/layout.ejs') %></header>
  <%- include('./layout/mainbar.ejs', {title: t('admin.users'), backLink:"/admin/users"}) ;%>

  <main class="d-flex flex-column align-items-center">
    <form
        class="user-form form"
        action="/admin/users/create"
        method="post"
        role="form"
        onsubmit="userCreate(event)"
    >
      <div class="form-container">
        <%- include('./admin/users/userForm.ejs')%>
      </div>
      <%- include('./layout/actionbar.ejs', {leftButtonTitle: t('action.cancel'), rightButtonTitle: t('admin.createUser')})%>
    </form>
  </main>

  <script src="/views/admin/users/frontend/utils.js"></script>


  <%- include('../scripts.ejs')%>
</body>

</html>