<!DOCTYPE html>
<html>

<head>
  <%- include('../../imports.ejs') %>
  <!-- Other style imports or CSS links -->
  <style>
    /* Center the h2 element */
    h2 {
      text-align: center;
      /* Centers the text horizontally */
      width: 100%;
      /* Ensures the text is centered within the parent container */
      margin-bottom: 5%;
    }
  </style>
</head>

<body>
  <header><%- include('./layout/layout.ejs') %></header>
  <%- include('../../../components/toast/toast.ejs')%>
  <main class="d-flex flex-column align-items-center">
    <form
        class="login-form form d-grid"
        action="/auth/update"
        method="post"
        role="form"
    >
      <%- include('./passwordResetForm.ejs') %>
      <!-- Hidden input to hold the token value -->
      <input
          type="hidden"
          id="token"
          name="token"
          value="<%= token %>"
      />
    </form>
  </main>
  <script>
    $('input').on('keyup', (event) => {
      canSubmitResetPassword();
    });
  </script>
  <script src="/views/account/frontend.js"></script>
  <script src="/components/form.js"></script>
  <script src="/views/layout/frontend.js"></script>
</body>

</html>