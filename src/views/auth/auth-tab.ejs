<ul class="nav nav-tabs auth-tab">
  <li class="nav-item">
    <a
        class="tab active"
        aria-current="page"
        href="/auth/login"
    >Log In</a>
  </li>
  <li class="nav-item">
    <a
        class="tab"
        href="/auth/signup"
    >Sign Up</a>
  </li>
</ul>
<script>
  const currentAuthPage = window.location.pathname;
  const activeTab = $(`a[href="${currentAuthPage}"]`);
  if (!activeTab.hasClass("active")) {
    $(".nav-tabs .active").removeClass("active");
    activeTab.addClass("active");
  }
</script>