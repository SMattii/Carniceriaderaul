 <!-- Modal -->
 <div
     class="modal fade modal-delete-confirm"
     tabindex="0"
     role="dialog"
     aria-labelledby="modalDeleteConfirm"
     aria-hidden="true"
 >
   <div
       class="modal-dialog"
       role="document"
   >
     <div class="modal-content">
       <div class="modal-header">
         <button
             type="button"
             class="button button-link-neutral"
             data-bs-dismiss="modal"
             aria-label="Close"
         >
           <i class="bi bi-x h2"></i>
         </button>
       </div>
       <div class="modal-body">
         Esta acci√≥n es definitiva y no se puede deshacer.
       </div>
       <div class="modal-footer">
         <button
             class="button button-link-neutral"
             data-bs-dismiss="modal"
             aria-label="deleteCancel"
         >
           <i class="bi bi-arrow-left"></i>Cancelar
         </button>
         <button
             class="button button-secondary button-error confirm"
             <% if(itemType==='user') {%>
             onclick="userDelete(event)"
             <%} else if (itemType === 'product') {%>
             onclick="productDelete(event)"
             <%} else if (itemType === 'order') {%>
             onclick="orderDelete(event)"
             <%}%>
             data-bs-dismiss="modal"
             aria-label="deleteConfirm"
         >
           <i class="bi bi-trash"></i>
           Borrar
         </button>
       </div>
     </div>
   </div>
 </div>