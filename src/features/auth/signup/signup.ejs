<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../imports.ejs') %>
  </head>
  <body>
    <header><%- include('./layout/layout.ejs') %></header>
    <main class="d-flex flex-column align-items-center">
      <%- include('./auth/auth-tab.ejs') %>
      <form class="signup-form d-grid" action="/auth/signup/sign" method="post" role="form">
        <h2>Sign Up</h2>
        <div class="d-flex flex-row gap-3">
          <div class="form-group">
            <label for="name">Name</label>
            <input name="name" type="text" class="form-control" id="name" required />
          </div>
          <div class="form-group">
            <label for="surame">Surname</label>
            <input name="surname" type="text" class="form-control" id="surname" required />
          </div>
        </div>
        <%- include('./auth/email-password-form.ejs') %>
        <button type="submit" class="button button-primary">
          Create Account
        </button>
      </form>
    </main>
</body>
</html>
