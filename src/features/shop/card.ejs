<div
  id="<%=product.product_id%>"
  class="product-card<% if(product.stock === 0) { %> disabled<% }%>"
>
  <!-- CARD HEADER -->
  <div class="product-header" data-toggle="tooltip" title="<%=product.name%>">
    <!-- Sale tag -->
    <% if(product.sale) { %>
    <div class="sale-tag">
      -<%=Math.round(100*(product.price-product.sale_price)/product.price)%>%
    </div>
    <% }%>
    <!-- Out of order tag -->
    <% if(product.stock === 0) { %>
    <div class="product-empty-tag">Out of order</div>
    <% }%>
    <img
      src="/assets/images/products/<%=currentCategory%>.jpg"
      alt="product-image"
    />
    <div class="product-name">
      <%=product.name[0]+product.name.slice(1).toLowerCase()%>
    </div>
  </div>
  <!-- CARD BODY -->

  <div class="product-body">
    <!-- Product price -->
    <div class="product-price">
      <% if(product.sale) { %>
      <div class="normal-price"><%=product.price%></div>
      <i class="bi bi-arrow-right"></i>
      <div class="sale-price"><%=product.sale_price%> <%=product.unit%></div>
      <% } else {%><%=product.price%> <%=product.unit%><% }%>
    </div>
    <!-- Product Form -->
    <form class="product-form">
      <div class="form-group field-select">
        <p>Weight:</p>
        <div class="input-group">
          <select
            name="weight"
            class="form-select"
            aria-label="Default select example"
          >
            <option value="0" selected>100g</option>
            <option value="1">200g</option>
            <option value="2">300g</option>
            <option value="3">400g</option>
          </select>
        </div>
      </div>
      <div class="form-group field-button">
        <div class="button-quantity">
          <input class="quantity" name="quantity" type="number" value="1" />
          <div class="buttons">
            <button
              class="button button-link-neutral button-plus"
              type="button"
            >
              <i class="bi bi-chevron-up"></i>
            </button>
            <button
              class="button button-link-neutral button-minus"
              type="button"
              disabled
            >
              <i class="bi bi-chevron-down"></i>
            </button>
          </div>
        </div>
        <button class="button button-primary cart-add button-md" type="submit">
          <i class="bi bi-cart-plus"></i>AÃ±adir
        </button>
      </div>
    </form>
  </div>
  <!-- CARD FOOTER -->
  <div class="product-footer">
    <a
      href="/shop/<%=currentCategory[0].toLowerCase() + currentCategory.slice(1)%>/<%=product.product_id%>"
    >
      <i class="bi bi-chevron-down"></i>
      Mas informaciones
    </a>
  </div>
</div>
