<div class="form-group field-select <% if(product.unit === "€/unidad") { %>hide<% }%>">
  <p>Peso:</p>
  <div class="input-group">
    <select
      name="weight"
      class="form-select"
      aria-label="Default select example"
    >
      <option value="100" selected>100g</option>
      <option value="200">200g</option>
      <option value="300">300g</option>
      <option value="400">400g</option>
      <option value="500">500g</option>
      <option value="600">600g</option>
    </select>
  </div>
</div>
<div class="form-group field-button">
  <div class="button-quantity">
    <input class="quantity" name="quantity" type="number" value="1" />
    <div class="buttons">
      <button
        class="button button-link-neutral button-plus"
        type="button"
        onclick="updateValue(event)"
      >
        <i class="bi bi-chevron-up"></i>
      </button>
      <button
        class="button button-link-neutral button-minus"
        type="button"
        onclick="updateValue(event)"
        disabled
      >
        <i class="bi bi-chevron-down"></i>
      </button>
    </div>
  </div>
  <button 
    class="button button-primary cart-add button-md" 
    type="submit"
    id="<%=product.productId%>"
    <%if(!isLogged) {%>
    onclick="notLoggedAction(event)"
    data-bs-toggle="modal"
    data-bs-target="#notConnectedModal"
    <%}%>
    >
    <i class="bi bi-cart-plus"></i>Añadir
  </button>
</div>