      <div class="order-container d-flex flex-column">
        <%orderProducts.map((product) => {%>
        <div class="product-row d-flex">
          <div><%=product.productName%></div>
          <div>
            <%=product.quantity%> x <%=product.productPrice%> =
            <%=product.quantity*product.productPrice%>
          </div>
          <div></div>
        </div>
        <%})%>
        <div class="order-summary d-flex">
          <b>Total: </b> <%=orderProducts[0].totalPrice%>
        </div>
      </div>
      <!-- -->
