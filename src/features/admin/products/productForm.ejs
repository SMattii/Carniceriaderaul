<div class="row">
  <div class="form-group col-md-5">
    <label for="name">Name</label>
    <input
      name="name"
      type="text"
      class="form-control"
      id="name"
      value="<%=product?.name%>"
      required
    />
  </div>
  <div class="form-group col-md-2">
    <label for="stock">Stock</label>
    <input
      name="stock"
      type="number"
      step="0.01"
      class="form-control"
      id="stock"
      value="<%=product?.stock%>"
      required
    />
  </div>
</div>
<div class="form-group col-md-7">
  <label for="image">Image</label>
  <input
    name="image"
    type="text"
    id="image"
    class="form-control"
    value="<%=product?.image%>"
  />
</div>
<div class="row align-items-center">
  <div class="form-group col-md-3">
    <label for="price">Default Price</label>
    <input
      name="price"
      type="number"
      step="0.01"
      class="form-control"
      id="price"
      value="<%=product?.price%>"
      required
    />
  </div>
  <div class="form-group col-md-3">
    <label for="salePrice">Sale Price</label>
    <input name="salePrice" type="number" class="form-control" id="salePrice"
    value="<%=product?.sale_price ?? ""%>" <%if(product?.sale){%>required<%}
    else {%> disabled <%}%> />
  </div>
  <div class="from-group col-md-1">
    <label for="sale">Sale</label>
    <select
      class="form-select col-md-1"
      name="sale"
      id="sale"
      onclick="setIsRequired(event)"
      required
    >
      <option value="1" <%if(!!product?.sale){%>selected<%}%>>SI</option>
      <option value="0" <%if(!product?.sale){%>selected<%}%>>NO</option>
    </select>
  </div>
</div>

<div class="form-group col-md-7">
  <label for="description">Description</label>
  <input
    name="description"
    type="text"
    id="description"
    class="form-control"
    value="<%=product?.description%>"
  />
</div>
